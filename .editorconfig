# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]
charset = utf-8
insert_final_newline = true
end_of_line = lf
indent_style = space
indent_size = 4

[{*Dockerfile,*Caddyfile,*.sh}]
indent_style = tab

[{{**/*.{css,js,json,html,ts,tsx,xml.dist},compose.*yaml,.github/**/*.yaml,helm/**}}]
indent_size = 2

[{**.md,**txt,**.dist}]
indent_size = unset
indent_style = unset
